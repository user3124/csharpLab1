<Window x:Class="databinding0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:databinding0"
        xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
        mc:Ignorable="d"
        Title="Здесь будет название" 
        MinHeight="500" MinWidth="800"
        SizeToContent="Height"
        Width="900"
        Background="#F5F7FA">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#111827"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="ToolTip"
                        Value="{Binding RelativeSource={RelativeSource Self}, 
                                        Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10,15,0,0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E40AF"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#A5B4FC"/>
                                <Setter Property="Foreground" Value="#E5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="#2563EB" Foreground="White">
            <MenuItem Header="_Файл">
                <MenuItem Foreground="Black" Header="Открыть"/>
                <MenuItem Foreground="Black" Header="Сохранить"/>
                <Separator/>
                <MenuItem Foreground="Black" Header="Выйти"/>
            </MenuItem>
            <MenuItem Header="_Выбрать метод">
                <MenuItem Foreground="Black" Header="Метод дихотомии"/>
                <MenuItem Foreground="Black" Header="Метод Золотого сечения"/>
            </MenuItem>
            <MenuItem Header="_Отображение">
                <MenuItem Foreground="Black" Header="Показать график"/>
            </MenuItem>
            <MenuItem Header="_Помощь">
                <MenuItem Foreground="Black" Header="О программе"/>
                <MenuItem Foreground="Black" Header="Справка"/>
            </MenuItem>
        </Menu>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30" Orientation="Vertical">

                <TextBlock Text="Метод дихотомии"
                           FontSize="22" FontWeight="Bold"
                           Margin="0,0,0,20" Foreground="#111827"/>

                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Функция f(x):"/>
                            <TextBox Grid.Row="0" Grid.Column="1"
                                     Text="{Binding Function, 
                                                    UpdateSourceTrigger=PropertyChanged,
                                                    ValidatesOnDataErrors=True,
                                                    ValidatesOnExceptions=True}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Начало интервала (A):"/>
                            <TextBox Grid.Row="1" Grid.Column="1"
                                     Text="{Binding IntervalStart, 
                                                    UpdateSourceTrigger=PropertyChanged,
                                                    ValidatesOnDataErrors=True,
                                                    ValidatesOnExceptions=True}"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Конец интервала (B):"/>
                            <TextBox Grid.Row="2" Grid.Column="1"
                                     Text="{Binding IntervalEnd, 
                                                    UpdateSourceTrigger=PropertyChanged,
                                                    ValidatesOnDataErrors=True,
                                                    ValidatesOnExceptions=True}"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Точность (ε):"/>
                            <TextBox Grid.Row="3" Grid.Column="1"
                                     Text="{Binding Precision, 
                                                    UpdateSourceTrigger=PropertyChanged,
                                                    ValidatesOnDataErrors=True,
                                                    ValidatesOnExceptions=True}"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Знаков после запятой:"/>
                            <TextBox Grid.Row="4" Grid.Column="1"
                                     Text="{Binding DecimalPlaces, 
                                                    UpdateSourceTrigger=PropertyChanged,
                                                    ValidatesOnDataErrors=True,
                                                    ValidatesOnExceptions=True}"/>
                        </Grid>

                        <Button Content="Найти корень"
                                Command="{Binding FindRootCommand}"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
                
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Результат:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding ResultText}" TextWrapping="Wrap" Foreground="#111827" FontSize="14"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="График:" FontWeight="Bold" Margin="0,0,0,10"/>

                        <Button Content="Построить график"
                                Command="{Binding PlotCommand}"
                                HorizontalAlignment="Left"/>
                        <oxy:PlotView Model="{Binding PlotModel}" Height="300" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
